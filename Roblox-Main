-- Script para controle
local Scripts = {}

function addScript(name, imageUrl, code, gameLink, discordLink)
	local btn = Instance.new("TextButton")
	btn.Size = UDim2.new(1, -10, 0, 30)
	btn.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
	btn.Text = name
	btn.TextColor3 = Color3.new(1, 1, 1)
	btn.Font = Enum.Font.Gotham
	btn.TextSize = 14
	btn.LayoutOrder = #Scripts + 2
	btn.Parent = ScriptList
	local bCorner = Instance.new("UICorner", btn)
	bCorner.CornerRadius = UDim.new(0, 6)

	table.insert(Scripts, {Button = btn, Name = name})

	btn.MouseButton1Click:Connect(function()
		Image.Image = imageUrl
		ExecuteBtn.MouseButton1Click:Connect(function()
			loadstring(code)()
		end)
		LinkBtn.MouseButton1Click:Connect(function()
			setclipboard(gameLink)
		end)
		DiscordBtn.MouseButton1Click:Connect(function()
			setclipboard(discordLink)
		end)
	end)
end

SearchBox:GetPropertyChangedSignal("Text"):Connect(function()
	local search = SearchBox.Text:lower()
	for _, s in pairs(Scripts) do
		s.Button.Visible = s.Name:lower():find(search) ~= nil
	end
end)

ToggleBtn.MouseButton1Click:Connect(function()
	MainFrame.Visible = not MainFrame.Visible
end)

-- Exemplo de adi√ß√£o de script:
addScript("üèÄBasketball LegendsüèÄ", "https://i.ibb.co/s9Lr4NBz/noFilter.webp", "loadstring(game:HttpGet("https://raw.githubusercontent.com/vnausea/absence-mini/refs/heads/main/absencemini.lua"))()", "https://www.roblox.com/pt/games/14259168147/Basketball-Legends", "https://discord.gg/FkqPKkDZW4")
