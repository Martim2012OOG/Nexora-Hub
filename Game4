-- Carregar Rayfield
local Rayfield = loadstring(game:HttpGet("https://sirius.menu/rayfield"))()

-- Criar janela principal estilo Orion
local Window = Rayfield:CreateWindow({
    Name = "Nexora Hub",
    LoadingTitle = "Nexora Hub",
    LoadingSubtitle = "by You",
    ConfigurationSaving = {
        Enabled = true,
        FolderName = "NexoraHub",
        FileName = "Config"
    },
    Theme = "Dark", -- Dark mais clean
    KeySystem = false
})

-- Ajustes de estilo para parecer Orion
Window.Size = UDim2.new(0, 500, 0, 350)
Window.Position = UDim2.new(0.25, 0, 0.2, 0)
Window.BackgroundTransparency = 0.15
Window.BackgroundColor3 = Color3.fromRGB(25, 25, 25)

-- ==========================
-- UNIVERSAL
-- ==========================
local UniversalTab = Window:CreateTab("UNIVERSAL", "rewind")

local FlyButton = UniversalTab:CreateButton({
    Name = "Fly Script",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/Martim2012OOG/Nexora-Hub/refs/heads/main/fly"))()
    end,
})

local maxJumps = 2
local JumpSlider = UniversalTab:CreateSlider({
    Name = "Max Jumps",
    Range = {1, 1000},
    Increment = 1,
    Suffix = "jumps",
    CurrentValue = maxJumps,
    Flag = "MaxJumps",
    Callback = function(Value)
        maxJumps = Value
        print("Max Jumps set to:", maxJumps)
    end,
})

local AimBotButton = UniversalTab:CreateButton({
    Name = "AimBot (PC)",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/Martim2012OOG/Nexora-Hub/refs/heads/main/aim"))()
    end,
})

local TeleportButton = UniversalTab:CreateButton({
    Name = "Teleport",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/Martim2012OOG/Roblo/refs/heads/main/Tp.lua"))()
    end,
})

local InfiniteYieldButton = UniversalTab:CreateButton({
    Name = "Infinite Yield",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source"))()
    end,
})

local DexButton = UniversalTab:CreateButton({
    Name = "Dex Explorer",
    Callback = function()
        loadstring(game:HttpGet("https://obj.wearedevs.net/2/scripts/Dex%20Explorer.lua"))()
    end,
})

local ReachButton = UniversalTab:CreateButton({
    Name = "Reach",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/Martim2012OOG/Nexora-Hub/refs/heads/main/Reach"))()
    end,
})

local EGORButton = UniversalTab:CreateButton({
    Name = "Roblox EGOR",
    Callback = function()
        loadstring(game:HttpGet("https://pastebin.com/raw/GBmWn4eZ", true))()
    end,
})

-- ==========================
-- IN GAME
-- ==========================
local InGameTab = Window:CreateTab("IN GAME", "settings")

local HelloButton = InGameTab:CreateButton({
    Name = "Print Hello",
    Callback = function()
        print("Função IN GAME executada")
    end,
})

-- ==========================
-- Double Jump Script
-- ==========================
local UIS = game:GetService("UserInputService")
local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoid = character:WaitForChild("Humanoid")

local jumps = 0
local jumpTick = tick()

humanoid.StateChanged:Connect(function(_, new)
    if new == Enum.HumanoidStateType.Landed then
        jumps = 0
    end
end)

UIS.JumpRequest:Connect(function()
    if jumps < maxJumps and tick() - jumpTick > 0.2 then
        jumpTick = tick()
        jumps += 1
        humanoid:ChangeState(Enum.HumanoidStateType.Jumping)
    end
end)

-- ==========================
-- Carregar Config
-- ==========================
Rayfield:LoadConfiguration()
