-- ==========================
-- IN GAME (Game Scripts)
-- ==========================
local InGameTab = Window:CreateTab("IN GAME", "settings")

local function CreateGameButton(Tab, Name, URL)
    Tab:CreateButton({
        Name = Name,
        Callback = function()
            local RunService = game:GetService("RunService")
            local function carregarScriptRemoto()
                local sucesso, resultado = pcall(function()
                    return loadstring(game:HttpGet(URL, true))()
                end)
                if not sucesso then
                    warn("Erro ao carregar o script: "..resultado)
                end
            end
            if RunService:IsClient() then
                carregarScriptRemoto()
            end
        end
    })
end

-- Game Scripts
