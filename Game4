    Name = "Max Jumps",
    Range = {1,1000},
    Increment = 1,
    Suffix = "jumps",
    CurrentValue = maxJumps,
    Flag = "MaxJumps",
    Callback = function(Value)
        maxJumps = Value
        print("Max Jumps set to:", maxJumps)
    end
})

