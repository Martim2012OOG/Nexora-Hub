-- ==========================
-- ABA IN GAME (Game Scripts)
-- ==========================
local InGameTab = Window:MakeTab({
    Name = "IN GAME",
    Icon = "rbxassetid://6023426915",
    PremiumOnly = false
})

-- Fun√ß√£o para criar bot√µes de Game Scripts
local function CreateGameButton(Tab, Name, URL)
    Tab:AddButton({
        Name = Name,
        Callback = function()
            local RunService = game:GetService("RunService")
            if RunService:IsClient() then
                local sucesso, resultado = pcall(function()
                    return loadstring(game:HttpGet(URL, true))()
                end)
                if not sucesso then warn("Erro ao carregar o script: "..resultado) end
            end
        end
    })
end

-- Adicionar Game Scripts
