-- ==========================
-- Aba Game Scripts
-- ==========================
local GameTab = Window:CreateTab({
    Name = "Game Scripts",
    Icon = "sports_esports",
    ImageSource = "Material",
    ShowTitle = true
})

-- Fun√ß√£o helper para criar bot√µes de Game Scripts
local function CreateGameButton(tab, name, url)
    tab:CreateButton({
        Name = name,
        Callback = function()
            local success, err = pcall(function()
                loadstring(game:HttpGet(url, true))()
            end)
            if not success then
                warn("[Nexora Hub] Erro ao carregar script: " .. tostring(err))
            end
        end
    })
end

-- Adicionar scripts no GameTab
