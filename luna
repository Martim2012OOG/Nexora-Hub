-- Carregar a Library do Luna
local Luna = loadstring(game:HttpGet("https://raw.githubusercontent.com/Nebula-Softworks/Luna-Interface-Suite/refs/heads/master/source.lua"))()

-- Criar a Window
local Window = Luna:CreateWindow({
    Name = "Nexora Hub",
    Subtitle = "By Nexora Hub",
    LogoID = nil,
    LoadingEnabled = true,
    LoadingTitle = "Nexora Hub",
    LoadingSubtitle = "By Nexora Hub",
    ConfigSettings = {
        RootFolder = nil,
        ConfigFolder = "NexoraHub"
    },
    KeySystem = false
})

-- ==========================
-- Aba Universal
-- ==========================
local UniversalTab = Window:CreateTab({
    Name = "Universal",
    Icon = "settings",
    ImageSource = "Material",
    ShowTitle = true
})

-- Fly Script
UniversalTab:CreateButton({
    Name = "Fly Script",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/Martim2012OOG/Nexora-Hub/refs/heads/main/fly"))()
    end
})

-- Max Jumps Slider
local Players = game:GetService("Players")
local localPlayer = Players.LocalPlayer
local function updateMaxJumps(value)
    local character = localPlayer.Character
    if character and character:FindFirstChild("Humanoid") then
        character.Humanoid.JumpPower = 50 * value -- exemplo: 50 * quantidade de jumps
    end
end

local maxJumps = 2
UniversalTab:CreateSlider({
    Name = "Max Jumps",
    Min = 1,
    Max = 1000,
    Default = maxJumps,
    Color = Color3.fromRGB(255,255,255),
    Increment = 1,
    ValueName = "jumps",
    Callback = function(Value)
        maxJumps = Value
        updateMaxJumps(maxJumps)
        print("Max Jumps set to:", maxJumps)
    end
})

